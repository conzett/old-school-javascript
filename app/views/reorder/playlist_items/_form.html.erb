<%= form_with model: playlist_item do |form| %>
  <div class="form-group">
    <%= form.label :duration %>
    <%= form.text_field :duration,
      id: :playlist_item_duration,
      class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :poster_id %>
    <%= form.select(
      :poster_id, poster_choices, { include_blank: true },
      { class: 'form-control', id: :poster_id }) %>
  </div>

  <div class="form-group">
    <%= form.submit(
      data: { disable_with: 'Submitting' },
      class: 'btn btn-primary') %>
  </div>
<% end %>
